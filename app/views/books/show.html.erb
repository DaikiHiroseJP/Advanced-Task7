<div class='container'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <%= render 'users/info', user: @user, isRoom: @isRoom, room: @room, roomId: @roomId, entry: @entry %>
      <h2 class="mt-3">New book</h2>
      <%= render 'form', book: @newbook %>
    </div>
    <div class='col-md-8 offset-md-1'>
    <h2>Book detail</h2>
      <table class='table'>
        <tr>
          <td><%= link_to(@book.user) do %>
            <%= image_tag @book.user.get_profile_image, size:"100x100" %><br>
            <%= @book.user.name %>
            <% end %>
          </td>
          <td><%= link_to @book.title, @book %></td>
          <td><%= @book.body %></td>
          <td><%= render 'favorites/favorite', book: @book %></td>
          <td>コメント数: <%= @book.book_comments.count %></td>
          <td><p class="view-count">閲覧数: <%= @book_detail.view_counts.count %></p></td>
          <td>
            <div id="star_<%= @book.id %>"></div>
            <script>
                $(document).on('turbolinks:load', function() {
                $('#star_<%= @book.id %>').empty();
                let star_<%= @book.id %> = document.querySelector('#star_<%= @book.id %>');
                star_<%= @book.id %>.innerHTML = ""
                let opt_<%= @book.id %> = {
                    starOn: "<%= asset_path('star-on.png') %>",
                    starOff: "<%= asset_path('star-off.png') %>",
                    starHalf: "<%= asset_path('star-half.png') %>",
                    score: "<%= @book.star %>",
                    readOnly: true,
                  };
                raty(star_<%= @book.id %> ,opt_<%= @book.id %>);
                });
            </script>
          </td>
          <% if @book.user == current_user %>
            <td><%= link_to 'Edit', edit_book_path(@book), class: "btn btn-sm btn-success" %></td>
            <td><%= link_to 'Destroy', @book, method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger"%></td>
          <% end %>

        </tr>
      </table>

      <div id="comments_area"><%= render "book_comments/index", book: @book %></div>
      <div class="new_comment"><%= render "book_comments/form", book: @book, book_comment: @book_comment %></div>

    </div>
  </div>
</div>